generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  userName        String   @unique
  phoneNumber     String   @unique
  password        String
  email           String   @unique
  avatar          String?
  role            Role
  isActive        Boolean  @default(true)
  status          String?
  facebookAccount String?
  OTP             String?
  OTP_method      OTPMethod
  dateOfBirth     DateTime
  sex             Sex
}

enum Role {
  admin
  staff
  player
}

enum OTPMethod {
  email
  phone
}

enum Sex {
  male
  female
  other
}
